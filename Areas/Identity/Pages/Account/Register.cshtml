@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_CustomerLayout";
}
<style>
    
    .auth-form-wrapper {
        background-color: rgb(14, 13, 49);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        color: white;
        width: 100%;
        max-width: 400px; /* Adjust as needed */
      

    }

    .input{
        background-color: rgb(14, 13, 49);
        color: white;
    }
</style>
<h1>@ViewData["Title"]</h1>

<div class="col-md-20 ps-md-6">
    <div class="auth-form-wrapper px-4 py-5" style="background-color: rgb(14, 13, 49);">

        <a href="#" class="noble-ui-logo logo-light d-block mb-2" style="color: white;">Noble<span style="color: #ffac00;">UI</span></a>
        <h5 class="text-muted fw-normal mb-4" style="color: white;">Create a free account.</h5>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="forms-sample">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row mb-3">
                <label asp-for="Input.FirstName" class="col-sm-3 col-form-label">F Name</label>
                <div class="col-sm-9">
                    <input asp-for="Input.FirstName" class="form-control" id="exampleInputUsername1" aria-required="true" placeholder="First Name" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label  asp-for="Input.LastName" class="col-sm-3 col-form-label">L Name</label>
                <div class="col-sm-9">
                    <input asp-for="Input.LastName" class="form-control" id="exampleInputUsername1" aria-required="true" placeholder="Lastname" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label for="exampleInputEmail2" asp-for="Input.Email" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input asp-for="Input.Email" class="form-control" id="exampleInputUsername1" aria-required="true" autocomplete="Username" placeholder="name@example.com" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label  asp-for="Input.PhoneNumber" class="col-sm-3 col-form-label">Number</label>
                <div class="col-sm-9">
                    <input asp-for="Input.PhoneNumber" class="form-control" id="exampleInputUsername1" aria-required="true" placeholder="Number" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Input.Address" class="col-sm-3 col-form-label">Address</label>
                <div class="col-sm-9">
                    <input asp-for="Input.Address" class="form-control" id="exampleInputUsername1" aria-required="true" placeholder="Number" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.Address" class="text-danger"></span>

                </div>
            </div>
           

            <div class="row mb-3">
                <label  asp-for="Input.Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Password" class="form-control" id="exampleInputPassword1" autocomplete="new-password" aria-required="true" placeholder="password" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label for="exampleInputEmail2" asp-for="Input.ConfirmPassword" class="col-sm-3 col-form-label"> Password</label>
                <div class="col-sm-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" id="exampleInputPassword1" autocomplete="new-password" aria-required="true" placeholder="ConfirmPassword" style="background-color: rgb(14, 13, 49); color: white;">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                </div>
            </div>
           
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

