@model Dashboard.Models.Image
@{
    Layout = "_AdminDashboard";
}

<style>


    .centered-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 200px;
    }
</style>

<div class="centered-container">
    <div class="container mt-6">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2>Image Details</h2>
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">



                            <dt class="col-sm-5"> ID-></dt>
                            <dd class="col-sm-7">@Model.Id</dd>
                            
                            <img src="@Model.FileName" class="d-block w-75" alt="Image"/>


                            
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>