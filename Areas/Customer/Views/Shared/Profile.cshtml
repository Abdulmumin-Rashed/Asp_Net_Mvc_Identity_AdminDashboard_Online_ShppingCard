@model Dashboard.Areas.Identity.Pages.Account.Manage.IndexModel

<div class="dropdown">
    <a class="dropdown-toggle d-flex align-items-center hidden-arrow"
       href="#"
       id="navbarDropdownMenuAvatar"
       role="button"
       data-mdb-toggle="dropdown"
       aria-expanded="false">

        @if (!string.IsNullOrEmpty(Model.Input.UrlImage))
        {

            <img src="/User_Images/@Model.Input.UrlImage"
                 height="15"
                 alt="MDB Logo"
                 loading="lazy" />
        }
    </a>
    <ul class="dropdown-menu dropdown-menu-end"
        aria-labelledby="navbarDropdownMenuAvatar">
        <li>
            <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My profile</a>
        </li>
        <li>
            <form id="logoutForm" class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    </ul>
</div>