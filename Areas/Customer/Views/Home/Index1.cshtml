@using Dashboard.Models;
@model List<Product>
@{
    Layout = "_CustomerLayout";
}
<div class="container">
    <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="pills-home-tab" data-bs-toggle="tab" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">All Products</a>
        </li>
        @foreach (var product in @Model)
        {
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="pills-tab-@@product.Category.Name" data-bs-toggle="tab" href="#pills-@@product.Category.Name" role="tab" aria-controls="pills-@@product.Category.Name">@product.Category.Name</a>
            </li>
        }
    </ul>

    <div class="tab-content" id="pills-tabContent">
        @foreach (var product in @Model)
        {
            <div class="tab-pane fade" id="pills-@product.Category.Name" role="tabpanel" aria-labelledby="pills-tab-@product.Category.Name">
                <div class="container-fluid">
                    <div class="row justify-content-start g-4">
                        @foreach (var product2 in Model)
                        {
                            <div class="col-md-3 col-sm-4 col-6">
                                <div class="card text-center shadow shop-item border-secondary mb-3" style="height: 380px;">
                                    <img src="@product2.Images.FirstOrDefault()?.FileName" class="card-img-top" alt="Product Image">
                                    <div class="card-body shop-item-details">
                                        <p class="card-title shop-item-title h5">@product2.Name</p>
                                        <p class="card-text shop-item-price">@product2.Price $</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-0">
                                        <a class="btn btn-primary shop-item-button" asp-controller="Home" asp-action="Detailes" asp-route-id="@product.Id">
                                            <i class="fa fa-search"></i> Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="container-fluid">
                <div class="row justify-content-start g-4">
                    @foreach (var category in @Model)
                    {
                        @foreach (var product in Model)
                        {
                            <div class="col-md-3 col-sm-4 col-6">
                                <div class="card text-center shadow shop-item border-secondary mb-3" style="height: 380px;">
                                    <img src="@product.Images.FirstOrDefault()?.FileName" class="card-img-top" alt="Product Image">
                                    <div class="card-body shop-item-details">
                                        <p class="card-title shop-item-title h5">@product.Name</p>
                                        <p class="card-text shop-item-price">@product.Price $</p>
                                    </div>
                                    <div class="card-footer bg-transparent border-0">
                                        <a class="btn btn-primary shop-item-button" asp-controller="Home" asp-action="Detailes" asp-route-id="@product.Id">
                                            <i class="fa fa-search"></i> Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
